{
  "name": "fitlifetracker-backend",
  "version": "1.0.0",
  "description": "Backend API for FitLifeTracker",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "bash start.sh",
    "dev": "nodemon server.js",
    "db:init": "node scripts/init-db.js",
    "db:sync": "node -e \"import('./src/models/sync.js').then(m => m.default())\"",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watchAll",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "test:integration": "jest --config jest.config.cjs tests/integration/",
    "test:performance": "jest --config jest.config.cjs tests/performance/",
    "test:unit": "jest --config jest.config.cjs tests/unit/"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "multer": "1.4.4",
    "node-cron": "^3.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.33.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.2.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "fitness",
    "health",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Apex Fitness Solutions",
  "license": "MIT"
}
